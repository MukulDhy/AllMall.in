<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Allow existing files & folders
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # React SPA fallback
  RewriteRule ^ index.html [L]
</IfModule>

# Disable directory listing
Options -Indexes
